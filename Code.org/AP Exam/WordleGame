onEvent("goToPuzzleButton", "click", function(){
  setScreen("wordleScreen");
});
onEvent("endGameScreen", "keydown", function(keystroke) {
    if (keystroke.key == "Backspace"){
      setScreen("wordleScreen");
    }
});
